<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.tep.sustainability.survey.fragments.Brief">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:animationResolution="@android:integer/config_shortAnimTime"
                android:background="@color/primaryMain"
                android:drawingCacheQuality="auto"
                android:progress="0" />

            <!--             5% , 30% , 55% , 80% , 100% -->

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:animationResolution="@android:integer/config_shortAnimTime"
                android:background="#00ffffff"
                android:drawingCacheQuality="auto"
                android:progress="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        app:cardBackgroundColor="@color/primaryMain"
                        app:cardCornerRadius="16dp">

                        <TextView
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="32dp"
                            android:minHeight="32dp"
                            android:text="1"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        android:onClick="part"
                        app:cardBackgroundColor="@color/primaryMain"
                        app:cardCornerRadius="16dp">

                        <TextView
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="32dp"
                            android:minHeight="32dp"
                            android:text="2"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        app:cardBackgroundColor="@color/primaryMain"
                        app:cardCornerRadius="16dp">

                        <TextView
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="32dp"
                            android:minHeight="32dp"
                            android:text="3"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        app:cardBackgroundColor="@color/primaryMain"
                        app:cardCornerRadius="16dp">

                        <TextView
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="32dp"
                            android:minHeight="32dp"
                            android:text="4"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        app:cardBackgroundColor="@color/primaryMain"
                        app:cardCornerRadius="16dp">

                        <TextView
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="32dp"
                            android:minHeight="32dp"
                            android:text="5"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/windowBackground"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="16dp"
                android:onClick="part"
                android:padding="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@drawable/fam"
                        android:clickable="false"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/title_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_toEndOf="@id/status_social"
                        android:text="Social Details"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/status_social"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/cross"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <ImageView
                        android:id="@+id/info_s"
                        android:tooltipText="Explain about this section of form"
                        android:onClick="showSnackbar"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:padding="4dp"
                        android:src="@drawable/info"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="partab"
                android:padding="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@drawable/mon"
                        android:clickable="false"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/title_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_toEndOf="@id/status_vehicle"
                        android:text="Vehicle Ownership"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/status_vehicle"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/cross"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <ImageView
                        android:id="@+id/info_v"
                        android:tooltipText="Explain about this section of form"
                        android:onClick="showSnackbar"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:padding="4dp"
                        android:src="@drawable/info"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/loc_survey"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="startService"
                android:padding="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@drawable/rout"
                        android:clickable="false"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/title_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_toEndOf="@id/status_travel"
                        android:text="Travel Characteristics"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/status_travel"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/cross"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <ImageView
                        android:id="@+id/info_t"
                        android:tooltipText="Explain about this section of form"
                        android:onClick="showSnackbar"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:padding="4dp"
                        android:src="@drawable/info"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="partac"
                android:padding="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@drawable/mon"
                        android:clickable="false"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/title_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_toEndOf="@id/status_public"
                        android:text="Public Transport Details"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/status_public"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/cross"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <ImageView
                        android:id="@+id/info_p"
                        android:tooltipText="Explain about this section of form"
                        android:onClick="showSnackbar"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:padding="4dp"
                        android:src="@drawable/info"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="partba"
                android:padding="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@drawable/pref"
                        android:clickable="false"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/title_pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_toEndOf="@id/status_preference"
                        android:text="Preference Survey"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/status_preference"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/cross"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <ImageView
                        android:id="@+id/info_pr"
                        android:tooltipText="Explain about this section of form"
                        android:onClick="showSnackbar"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:padding="4dp"
                        android:src="@drawable/info"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="partbb"
                android:padding="16dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@drawable/pref"
                        android:clickable="false"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/title_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Rated Preference Survey"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:layout_toEndOf="@id/status_rated"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/status_rated"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/cross"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <ImageView
                        android:id="@+id/info_r"
                        android:tooltipText="Explain about this section of form"
                        android:onClick="showSnackbar"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:padding="4dp"
                        android:src="@drawable/info"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>