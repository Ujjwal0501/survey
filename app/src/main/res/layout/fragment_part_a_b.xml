<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.tep.sustainability.survey.fragments.Part_a_b">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/secondaryDark"
                    app:cardCornerRadius="16dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/primaryMain"
                    app:cardCornerRadius="16dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/step0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="4dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Assets"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textHint"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:text="Monthly Income"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/m_income"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/income" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:text="Residence type"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/res_type"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/residence" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="Car"
                        android:textColor="@color/textSecondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/car_count"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/count" />

                        <Spinner
                            android:id="@+id/car_age"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/age" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/car_mileage"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/mileage" />

                        <Spinner
                            android:id="@+id/car_fuel"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/fuel" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="-8dp"
                        android:text="(Optional)"
                        android:textColor="@color/textSecondary"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="2 Wheeler"
                        android:textColor="@color/textSecondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/twow_count"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/count" />

                        <Spinner
                            android:id="@+id/twow_age"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/age" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/twow_milage"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/mileage" />

                        <Spinner
                            android:id="@+id/twow_fuel"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/fuel" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="-8dp"
                        android:text="(Optional)"
                        android:textColor="@color/textSecondary"
                        android:textSize="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="Bicycle"
                        android:textColor="@color/textSecondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/bicylce_count"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/count" />

                        <Spinner
                            android:id="@+id/bicylce_age"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:entries="@array/age" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="4dp"
                android:visibility="gone"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Monthly on Vehicle"
                        android:textColor="@color/textSecondary"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="EMI (Rs. per month)"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/m_emi"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Amount"
                            android:inputType="number" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fuel Cost (Rs. per month)"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/mfuel_cost"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Amount"
                            android:inputType="number"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Maintenance Cost (Rs. per month)"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/m_maint"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Amount"
                            android:inputType="number"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vehicle Registration (Rs.)"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/reg_charge"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Optional"
                            android:inputType="number"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Parking Charge (Rs. per month)"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/mpark_cost"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Optional"
                            android:inputType="number"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/secondaryLight"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="14dp"
            android:src="@drawable/prev" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/secondaryLight"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/next"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="14dp"
            android:src="@drawable/next" />

    </androidx.cardview.widget.CardView>
</FrameLayout>