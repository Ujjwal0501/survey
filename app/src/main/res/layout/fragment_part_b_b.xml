<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Part_b_b">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="16dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/two"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="16dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/three"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="16dp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/step0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:contentPadding="6dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Which is the major issue of transport system in the city? Rank the issues on the scale 1 to 4 (1= high; 4= low)"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Traffic Congestion"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/congestion"
                            android:hint="Rate"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Safety and security"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/safety"
                            android:hint="Rate"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Air Pollution"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/air_pollution"
                            android:hint="Rate"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Noise Pollution"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/noise_pollution"
                            android:hint="Rate"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:contentPadding="6dp"
                app:cardCornerRadius="6dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Which is more important to you for choosing a mode of Transport? Rate on the scale of 1 (Least Important) to 5 (Most Important)."
                        android:textAlignment="center" />

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Fare (travel cost)"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/fare_home"
                            android:hint="Home"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/fare_education"
                            android:hint="Edu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/fare_social"
                            android:hint="Social"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Speed"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/speed_home"
                            android:hint="Home"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/speed_education"
                            android:hint="Edu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/speed_social"
                            android:hint="Social"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Comfort (door to door)"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/comfort_home"
                            android:hint="Home"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/comfort_education"
                            android:hint="Edu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/comfort_social"
                            android:hint="Social"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Safety"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/safety_home"
                            android:hint="Home"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/safety_education"
                            android:hint="Edu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/safety_social"
                            android:hint="Social"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Parking Cost"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/parking_home"
                            android:hint="Home"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/parking_education"
                            android:hint="Edu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/parking_social"
                            android:hint="Social"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Other cost"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/other_home"
                            android:hint="Home"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/other_education"
                            android:hint="Edu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/other_social"
                            android:hint="Social"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:contentPadding="6dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="6dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Which is appropriate policy option for better transport system in your city? Please give rank."
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/rank_1"
                            android:entries="@array/ranking"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/rank_2"
                            android:entries="@array/ranking"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="3"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/rank_3"
                            android:entries="@array/ranking"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="4"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/rank_4"
                            android:entries="@array/ranking"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="5"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/rank_5"
                            android:entries="@array/ranking"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="6"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/rank_6"
                            android:entries="@array/ranking"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="7"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/rank_7"
                            android:entries="@array/ranking"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_marginTop="12dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_margin="16dp"
        android:onClick="partab"
        app:cardCornerRadius="32dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="14dp"
            android:src="@drawable/prev" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        android:onClick="partab"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/next"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="14dp"
            android:src="@drawable/next" />

    </androidx.cardview.widget.CardView>

</FrameLayout>