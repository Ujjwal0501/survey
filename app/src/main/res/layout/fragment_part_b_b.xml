<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.tep.sustainability.survey.fragments.Part_b_b">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/secondaryDark"
                    app:cardCornerRadius="16dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/primaryMain"
                    app:cardCornerRadius="16dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:minWidth="8dp"
                    android:minHeight="8dp"
                    app:cardBackgroundColor="@color/primaryMain"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/step0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="6dp"
                app:contentPadding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Which is the major issue of transport system in the city? Rank the issues on the scale 1 to 5 (1= high; 5= low)"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryLight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Traffic Congestion"
                            android:textColor="@color/textPrimary" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/congestion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Rate"
                            android:inputType="number"
                            android:nextFocusRight="@id/safety"
                            android:nextFocusDown="@id/safety"
                            android:nextFocusForward="@id/safety"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Safety and security"
                            android:textColor="@color/textPrimary" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/safety"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Rate"
                            android:inputType="number"
                            android:nextFocusLeft="@id/congestion"
                            android:nextFocusRight="@id/air_pollution"
                            android:nextFocusUp="@id/congestion"
                            android:nextFocusDown="@id/air_pollution"
                            android:nextFocusForward="@id/air_pollution"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Air Pollution"
                            android:textColor="@color/textPrimary" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/air_pollution"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Rate"
                            android:inputType="number"
                            android:nextFocusLeft="@id/safety"
                            android:nextFocusRight="@id/noise_pollution"
                            android:nextFocusUp="@id/safety"
                            android:nextFocusDown="@id/noise_pollution"
                            android:nextFocusForward="@id/noise_pollution"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Noise Pollution"
                            android:textColor="@color/textPrimary" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/noise_pollution"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Rate"
                            android:inputType="number"
                            android:nextFocusLeft="@id/air_pollution"
                            android:nextFocusRight="@id/next"
                            android:nextFocusUp="@id/air_pollution"
                            android:nextFocusDown="@id/next"
                            android:nextFocusForward="@id/next"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textHint" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:visibility="gone"
                app:cardCornerRadius="6dp"
                app:contentPadding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Which is more important to you for choosing a mode of Transport? Rate on the scale of 1 (Least Important) to 5 (Most Important)."
                        android:textAlignment="center"
                        android:textColor="@color/secondaryLight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Fare (travel cost)" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/fare_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="H"
                            android:inputType="number"
                            android:nextFocusLeft="@id/prev"
                            android:nextFocusRight="@id/fare_education"
                            android:nextFocusDown="@id/fare_education"
                            android:nextFocusForward="@id/fare_education" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/fare_education"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="E"
                            android:inputType="number"
                            android:nextFocusLeft="@id/fare_home"
                            android:nextFocusRight="@id/fare_social"
                            android:nextFocusDown="@id/fare_social"
                            android:nextFocusForward="@id/fare_social" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/fare_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="O"
                            android:inputType="number"
                            android:nextFocusLeft="@id/fare_home"
                            android:nextFocusRight="@id/speed_home"
                            android:nextFocusDown="@id/speed_home"
                            android:nextFocusForward="@id/speed_home" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Speed" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/speed_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="H"
                            android:inputType="number"
                            android:nextFocusLeft="@id/fare_social"
                            android:nextFocusRight="@id/speed_education"
                            android:nextFocusUp="@id/fare_home"
                            android:nextFocusDown="@id/speed_education"
                            android:nextFocusForward="@id/speed_education" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/speed_education"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="E"
                            android:inputType="number"
                            android:nextFocusLeft="@id/speed_home"
                            android:nextFocusRight="@id/speed_social"
                            android:nextFocusUp="@id/fare_education"
                            android:nextFocusDown="@id/speed_social"
                            android:nextFocusForward="@id/speed_social" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/speed_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="O"
                            android:inputType="number"
                            android:nextFocusLeft="@id/speed_education"
                            android:nextFocusRight="@id/comfort_home"
                            android:nextFocusUp="@id/fare_social"
                            android:nextFocusDown="@id/comfort_home"
                            android:nextFocusForward="@id/comfort_home" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Comfort (door to door)" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/comfort_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="H"
                            android:inputType="number"
                            android:nextFocusLeft="@id/speed_social"
                            android:nextFocusRight="@id/comfort_education"
                            android:nextFocusUp="@id/speed_home"
                            android:nextFocusDown="@id/comfort_education"
                            android:nextFocusForward="@id/comfort_education" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/comfort_education"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="E"
                            android:inputType="number"
                            android:nextFocusLeft="@id/comfort_home"
                            android:nextFocusRight="@id/comfort_social"
                            android:nextFocusUp="@id/speed_education"
                            android:nextFocusDown="@id/comfort_social" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/comfort_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="O"
                            android:inputType="number"
                            android:nextFocusLeft="@id/comfort_education"
                            android:nextFocusRight="@id/safety_home"
                            android:nextFocusUp="@id/speed_social"
                            android:nextFocusDown="@id/safety_home" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Safety" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/safety_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="H"
                            android:inputType="number"
                            android:nextFocusLeft="@id/comfort_social"
                            android:nextFocusRight="@id/safety_education"
                            android:nextFocusUp="@id/comfort_home"
                            android:nextFocusDown="@id/safety_education" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/safety_education"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="E"
                            android:inputType="number"
                            android:nextFocusLeft="@id/safety_home"
                            android:nextFocusRight="@id/safety_social"
                            android:nextFocusUp="@id/comfort_education"
                            android:nextFocusDown="@id/safety_social" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/safety_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="O"
                            android:inputType="number"
                            android:nextFocusLeft="@id/safety_education"
                            android:nextFocusRight="@id/parking_home"
                            android:nextFocusUp="@id/comfort_social"
                            android:nextFocusDown="@id/parking_home" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Parking Cost" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/parking_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="H"
                            android:inputType="number"
                            android:nextFocusLeft="@id/safety_social"
                            android:nextFocusRight="@id/parking_education"
                            android:nextFocusUp="@id/safety_home"
                            android:nextFocusDown="@id/parking_education" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/parking_education"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="E"
                            android:inputType="number"
                            android:nextFocusLeft="@id/parking_home"
                            android:nextFocusRight="@id/parking_social"
                            android:nextFocusUp="@id/safety_education"
                            android:nextFocusDown="@id/parking_social" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/parking_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="O"
                            android:inputType="number"
                            android:nextFocusLeft="@id/parking_education"
                            android:nextFocusRight="@id/other_home"
                            android:nextFocusUp="@id/safety_social"
                            android:nextFocusDown="@id/other_home" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Other cost" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/other_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="H"
                            android:inputType="number"
                            android:nextFocusLeft="@id/parking_social"
                            android:nextFocusRight="@id/other_education"
                            android:nextFocusUp="@id/parking_home"
                            android:nextFocusDown="@id/other_education" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/other_education"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="E"
                            android:inputType="number"
                            android:nextFocusLeft="@id/other_home"
                            android:nextFocusRight="@id/other_social"
                            android:nextFocusUp="@id/parking_education"
                            android:nextFocusDown="@id/other_social" />

                        <com.tep.sustainability.survey.helpers.WatchedEditText
                            android:id="@+id/other_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="O"
                            android:inputType="number"
                            android:nextFocusLeft="@id/other_education"
                            android:nextFocusRight="@id/next"
                            android:nextFocusUp="@id/parking_social"
                            android:nextFocusDown="@id/next" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="H = Home\nE = Education\nO = Social/Recreational/Other"
                        android:textColor="@color/secondaryLight" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginBottom="32dp"
                android:visibility="gone"
                app:cardCornerRadius="6dp"
                app:contentPadding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Which is appropriate policy option for better transport system in your city? Please give rank."
                        android:textAlignment="center"
                        android:textColor="@color/secondaryLight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="@string/policy1"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/rank_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/ranking" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="@string/policy2"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/rank_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/ranking" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="@string/policy3"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/rank_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/ranking" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="@string/policy4"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/rank_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/ranking" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="@string/policy5"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/rank_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/ranking" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="@string/policy6"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/rank_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/ranking" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="@string/policy7"
                            android:textColor="@color/textPrimary" />

                        <Spinner
                            android:id="@+id/rank_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:entries="@array/ranking" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_margin="16dp"
        android:onClick="partab"
        android:visibility="gone"
        app:cardBackgroundColor="@color/secondaryLight"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="14dp"
            android:src="@drawable/prev" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        android:onClick="partab"
        app:cardBackgroundColor="@color/secondaryLight"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/next"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="14dp"
            android:src="@drawable/next" />

    </androidx.cardview.widget.CardView>

</FrameLayout>